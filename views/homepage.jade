extends layout

block content
               
   table.table.table-condensed 
      tr
        td 
          .control-group
           .controls
             button.btn-link.btn(type='submit') 
              img(src = '/images/filler.png')
      tr
        td
         .container-fluid
             .row-fluid
                 .span8
                    h3 Top Projects:
                    each project, i in projects
                      .well(class="projectWellHome")
                        div(class="listText")
                          img(class="coverPic", src='/images/cat.jpg')
                          br
                          div(class="titleDiv")
                            a(class="titlesHome", href="/projects/"+project._id) #{project.title}

                 .span4
                     h3 New Ideas:
                     table.table.table-condensed
                        each idea, i in ideas
                          tr
                            td 
                              a(href="/find/"+idea.name, class="names") -#{idea.name} 
                            td 
                              h5  #{idea.description}

